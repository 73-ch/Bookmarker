{
  "manifest_version": 2,
  "name": "Bookmarker",
  "version": "1.0.0",
  "default_locale":"en",
  "description":"__MSG_description__",

  "browser_action": {
    "default_popup":"popup.html",
    "default_title": "Bookmarker"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["jquery-3.1.1.min.js","content.js"],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "tabs",
    "bookmarks",
    "activeTab",
    "storage",
    "management",
    "chrome://favicon/"
  ],

  "commands": {
    "_execute_browser_action": {
      "global": false,
      "suggested_key": [
        {
          "default": "Ctrl+D",
          "windows": "Ctrl+D",
          "mac": "Command+D"
        }
      ]
    },
    "delete_bookmark": {
      "suggested_key": {
        "default": "Ctrl+I",
        "mac": "Command+I"
      },
      "description": "ブックマークの削除"
    }
  }
}
