{
  "manifest_version": 2,
  "name": "Tab Manager",
  "version": "0.1",

  "browser_action": {
    "default_popup":"popup.html",
    "default_title": ""
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["jquery-3.1.1.min.js","content.js"]
    }
  ],

  "permissions": [
    "tabs",
    "bookmarks",
    "activeTab",
    "storage",
    "management",
    "chrome://favicon/"
  ],

  "commands": {
    "_execute_browser_action": {
      "global": false,
      "suggested_key": [
        {
          "default": "Alt+D",
          "windows": "Alt+D",
          "mac": "MacCtrl+D"
        }
      ]
    },
    "delete_bookmark": {
      "suggested_key": {
        "default": "Ctrl+I",
        "mac": "Command+I"
      },
      "description": "ブックマークの削除"
    }
  }
}
