{
  "manifest_version": 2,
  "name": "Tab Manager",
  "version": "0",

  "browser_action": {
    "default_popup":"popup.html",
    "default_title": ""
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["content.js"]
    }
  ],

  "permissions": [
    "tabs",
    "bookmarks",
    "activeTab",
    "storage"
  ],

  "commands": {
    "_execute_browser_action": {
      "description": "ポップアップウィンドウを表示",
      "global": false,
      "suggested_key": {
        "default": "Alt+D",
        "windows": "Alt+D",
        "mac": "MacCtrl+D"
      }
    }
  }
}
